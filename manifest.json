{
    "manifest_version": 3,
    "name": "QR Code Reader Chrome Extension",
    "version": "1.0.0",
    "description": "QR Code Reader Chrome Extension",
    "action": {
        "default_icon": "icon_disabled.png",
        "default_title": "Turn me on!"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/content-script.bundle.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage",
        "clipboardWrite"
    ],
    "host_permissions": ["http://*/*", "https://*/*"]
}
